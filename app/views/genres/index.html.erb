<div class="columns is-centered">
  <div class="column is-half">
  <h2 class="title is-size-2">Genres</h1>
    <table class="table is-fullwidth">
      <thead>
        <tr>
          <th>Name</th>
          <th>Number of Games</th>
          <th>Link</th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do | genre |%>
        <tr>
          <td><%= genre.name %></td>
          <td><%= genre.video_game_titles.count %></td>
          <td><%= link_to "Link", genre %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
