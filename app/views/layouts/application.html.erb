  <body>
    <header>
        <h1 class="title is-size-1">Video Game Rankings</h1>
        <nav>
          <ul>
            <li><%= link_to 'Publishers', publishers_path %></li>
            <li><%= link_to 'Genres', genres_path %></li>
          </ul>
        </nav>
    </header>
    <%= yield %>
  </body>
</html>
